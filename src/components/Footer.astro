---
import Social from "./Social.astro"
---

<footer>
    <p>Built with Astro</p>
    <div class="social-group">
        {
            [{
                platform: "linkedin",
                username: "hello"
            }, {
                platform: "instagram",
                username: "hello"
            }].map((props) => <Social {...props} />)
        }
    </div>
</footer>

<style>
    footer {
        padding: 4rem 0;
        background: #202020;

        display: flex;
        justify-content: center;
        align-items: center;

        position: relative;
    }
    footer > p {
        color: #e0e0e0;
    }

    .social-group {
        position: absolute;
        top: 1rem;
        right: 4rem;

        display: flex;
        gap: 1rem;
    }

</style>
